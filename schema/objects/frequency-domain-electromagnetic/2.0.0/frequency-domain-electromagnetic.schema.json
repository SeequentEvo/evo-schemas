{
  "$id": "/objects/frequency-domain-electromagnetic/2.0.0/frequency-domain-electromagnetic.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Frequency Domain Electromagnetic data.",
  "type": "object",
  "allOf": [
    {
      "$ref": "/components/base-spatial-data-properties/1.1.0/base-spatial-data-properties.schema.json"
    },
    {
      "properties": {
        "schema": {
          "const": "/objects/frequency-domain-electromagnetic/2.0.0/frequency-domain-electromagnetic.schema.json"
        },
        "survey": {
          "description": "Survey information.",
          "type": "object",
          "properties": {
            "type": {
              "description": "Survey type.",
              "type": "string",
              "enum": [
                "GROUND",
                "AIR"
              ]
            }
          },
          "required": [
            "type"
          ]
        },
        "data_type": {
          "description": "Data type.",
          "type": "string"
        },        
        "configurations": {
          "description": "Frequency domain electromagnetic configurations.",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "/components/frequency-domain-electromagnetic-configuration/1.0.0/frequency-domain-electromagnetic-configuration.schema.json"
          }
        },
        "attribute_definition_list": {
          "description": "List of attribute definitions. These will be referenced in survey collections.",
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              {
                "$ref": "/components/survey-attribute-definition/1.0.1/survey-attribute-definition.schema.json"
              },
              {
                "$ref": "/components/frequency-domain-electromagnetic-attribute-definition/1.0.0/frequency-domain-electromagnetic-attribute-definition.schema.json"
              }
            ]
          }
        },
        "collections": {
          "description": "Survey collections.",
          "type": "array",
          "minItems": 1,
          "items": {
            "description": "Survey collections.",
            "$ref": "/components/survey-collection/1.0.1/survey-collection.schema.json"
          }
        }
      }
    }
  ],
  "required": [
    "schema",
    "survey",
    "attribute_definition_list",
    "collections"
  ],
  "unevaluatedProperties": false
}
